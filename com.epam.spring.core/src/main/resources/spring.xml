<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">
 	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:client.properties</value>
			</list>
		</property>
		<property name="ignoreResourceNotFound" value="true" />
		<property name="systemPropertiesMode">
			<util:constant
				static-field="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		</property>
	</bean>
 		

	<bean id="client" class="com.epam.spring.core.entity.Client">
		<constructor-arg value="${id}"/>
		<constructor-arg value="${fullname}"/>
		<property name="greeting" value="${greeting}"/>
	</bean>
	<bean id="app" class="com.epam.spring.core.app.App">
		<constructor-arg ref="client" />
		<constructor-arg ref="cacheFileEventLogger" />
		<constructor-arg>
			<map>
				<entry key="INFO" value-ref="consoleEventLogger" />
				<entry key="ERROR" value-ref="combinedEventLogger" />
			</map>
		</constructor-arg>
		<property name="type" value="ERROR">

		</property>

	</bean>
	<bean id="event" class="com.epam.spring.core.entity.Event"
		scope="prototype">
		<constructor-arg>
			<bean class="java.util.Date" />
		</constructor-arg>
		<constructor-arg ref="client" />
		<property name="msg" value="hello" />
	</bean>
	<import resource="loggers.xml" />
</beans>